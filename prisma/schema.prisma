generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model ConversionCommand {
  id         String         @id @default(cuid())
  complete   Boolean        @default(false)
  code       String
  moduleId   String
  moduleFile ConversionFile @relation(fields: [moduleId], references: [id])
}

model ConversionFile {
  id       String              @id @default(cuid())
  complete Boolean             @default(false)
  commands ConversionCommand[]
  name     String
  moduleId String
  module   ConversionModule    @relation(fields: [moduleId], references: [id])
}

model ConversionModule {
  id       String           @id @default(cuid())
  complete Boolean          @default(false)
  name     String
  files    ConversionFile[]
}
